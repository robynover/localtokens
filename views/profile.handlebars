<div class="profile" id="{{profile_user}}">
	<h2>{{profile_user}}</h2>
	<p><strong>Balance:</strong> {{balance}} {{pluralize balance 'token' 'tokens'}}</p>
	<div class="row">
		<div class="one-third column profile-pic">
			<img id="profile-photo" src="/images/avatar.png">
			<div class="profile-bal">
				{{balance}}
			</div>
			{{#equal profile_user username}}
			<p class="edit-photo"><i class="fa fa-pencil" aria-hidden="true"></i></p>

			<div id="user-photo-upload">
				<input type="file" name="profilephoto" id="user-photo-file"><br>
				<p>File must be less than 4MB</p>
				<button>Upload</button>
			</div>

			{{/equal}}
		</div>
		<div class="two-thirds column">
				
			<div class="profile-text" id="{{user_id}}"></div>
			{{#equal profile_user username}}
			<p class="edit-profile"><i class="fa fa-pencil" aria-hidden="true"></i></p>
			{{/equal}}

			<div class="row">
				<div class="column one-half">
					<h4>Offering</h4>

					{{#equal profile_user username}}
					<div class="add-item">
						<input type="text" placeholder="Add Offering">&nbsp;
						<a href="#" id="offering">
							<i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i>
						</a>
					</div>
					{{/equal}}

					<ul class="offering"></ul>
					
				</div>
				<div class="column one-half">
					<h4>Seeking</h4>

					{{#equal profile_user username}}
					<div class="add-item">
						<input type="text" placeholder="Add Seeking">&nbsp;
						<a href="#" id="seeking">
							<i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i>
						</a>	
					</div>
					{{/equal}}

					<ul class="seeking"></ul>
					

				</div>
			</div>

		</div>
	</div>

	{{#equal profile_user username}}
	<div id="editmodal">
		<p class="modalclose"><a href="#" class="close"><i class="fa fa-times-circle-o" aria-hidden="true"></i></a></p>
		<textarea name="message"></textarea>
		<input type="hidden" name="id">
		<button>Edit</button>
	</div>
	{{/equal}}
</div>
