<h2>Users</h2>
<table id="users-table">
	<thead>
		<tr><th>Username</th><th>Name</th><th>Active</th><th>Admin</th><th>Balance</th></tr>
	</thead>
	<tbody>
{{#each users}}
	<tr>
		<td>{{username}}</td>
		<td>{{firstname}} {{lastname}}</td>
		<td>{{#if is_active}}
			<i class="fa fa-check" aria-hidden="true"></i>
			{{/if}}
		</td>
		<td>{{#if is_admin}}
			<i class="fa fa-check" aria-hidden="true"></i>
			{{/if}}
		</td>
		<td>
			{{balance}}
		</td>
	</tr>
{{/each}}
</tbody>
</table>